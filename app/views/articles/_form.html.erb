<div class="container">

 
 <div class="row justify-content-center">
 <div class="col-10">
 <%= render "shared/errors" %>
<%= form_with(model: @article, data: { turbo: false }, local: true, class: "shadow-lg p-3 mb-5 bg-info rounded ") do  |f| %>
<div class="form-group row">

    <%= f.label :title, class: "col-2 col-form-label text-light" %>
    <div class="col-10">
    <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Article title" %>
    </div>
    </div>

  <div class="form-group row">
    <%= f.label :description, class: "col-2 col-form-label text-light" %>
    <div class="col-10">
    <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %> 
    </div>
  </div>
  <div class="form-group align-items-center">
    <%= f.submit class:"btn btn-outline-light" %> 
  </div>
  
<% end %>
</div>
<div class="mb-3 text-center">
<%= link_to "Cancel edit and return to articles listing", articles_path %>
</div>
</div>
</div>
